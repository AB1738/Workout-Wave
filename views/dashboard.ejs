            <script>

        

        const cardio = document.getElementById('timeSpentCardioChart').getContext('2d');
        const minsOfCardio = <%- minsOfCardio %>;

        const cardioData = {
            
            datasets: [{
                label: minsOfCardio>1?'Mins Of Cardio':'No Cardio Logged',
                data: minsOfCardio>1?[minsOfCardio]:['1'],
                backgroundColor: ['rgb(255, 99, 132)'],
                hoverOffset: 4
            }]
        };

        const cardioConfig = {
            type: 'doughnut',
            data: cardioData,
            options: {
                responsive: true,
                // maintainAspectRatio: false, 
                cutout: '85%', // Adjust to make room for center text
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Total Time Spent Doing Cardio'
                    },  tooltip: {
                callbacks: {
                    label: function(tooltipItem) {
                        // Display "No Cardio Logged" if the dataset is effectively zero
                        return minsOfCardio > 0 
                            ? tooltipItem.label + 'Mins Of Cardio: ' + tooltipItem.raw 
                            : 'No Cardio Logged';
                    }
                }
            }
                } ,

                elements: {
                    center: {
                      text: minsOfCardio > 0 ? minsOfCardio + ' mins' : 'No Cardio Logged',
                        color: '#000', // Text color
                        fontStyle: 'Arial', // Font style
                    }
                }
            }
        };

        const myCardioChart = new Chart(cardio, cardioConfig);
    
